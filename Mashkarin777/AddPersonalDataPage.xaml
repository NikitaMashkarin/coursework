<Page x:Class="Mashkarin777.AddPersonalDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mashkarin777"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPersonalDataPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Content="Назад" Width="100" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="90,336,0,0"
                Click="BtnBack_Click"
                Grid.Row="1" Grid.Column="2" />

        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Персональные данные"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"
                           Grid.Row="0" />

                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Width="300"
                            Margin="0,0,0,20">
                    <TextBlock Text="Id работника:" />
                    <TextBox x:Name="IdTextBox" Margin="0,5" />

                    <TextBlock Text="Адрес:" />
                    <TextBox x:Name="AddressTextBox" Margin="0,5" />

                    <TextBlock Text="Серия паспорта:" />
                    <TextBox x:Name="PassportSeriesTextBox" Margin="0,5" />

                    <TextBlock Text="Номер паспорта:" />
                    <TextBox x:Name="PassportNumberTextBox" Margin="0,5" />

                    <TextBlock Text="СНИЛС:" />
                    <TextBox x:Name="SNILSTextBox" Margin="0,5" />

                    <Button Content="Сохранить"
                            Margin="0,15"
                            HorizontalAlignment="Center"
                            Width="120"
                            Click="SaveButton_Click" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
