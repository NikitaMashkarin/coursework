<Page x:Class="Mashkarin777.AdministratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mashkarin777"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdministratorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Content="Выйти" Width="100" Height="30"
    HorizontalAlignment="Left" VerticalAlignment="Top"
    Click="BtnBack_Click"
    Grid.Row="1" Grid.Column="2" Margin="90,338,0,0" />

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Администратор"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Row="0"
               Margin="0,10,0,0" />

            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Content="Отчёты" Width="200" Height="40" Margin="0,10" Click="BtnReports_Click"/>
                <Button Content="Задачи" Width="200" Height="40" Margin="0,10" Click="BtnTasks_Click"/>
                <Button Content="Проекты" Width="200" Height="40" Margin="0,10" Click="BtnProjects_Click"/>
                <Button Content="База сотрудников" Width="200" Height="40" Margin="0,10" Click="BtnEmployees_Click"/>
                <Button Content="Сформировать сводный отчёт" Width="200" Height="40" Margin="0,10" Click="BtnGenerateSummaryReport_Click"/>
            </StackPanel>
        </Grid>
    </Grid>

</Page>
