<Page x:Class="Mashkarin777.CreateTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mashkarin777"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTaskPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Создание задачи" FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Название задачи:" Width="99"/>
                <TextBox x:Name="TaskNameTextBox" Height="22" Margin="0,0,0,10" Width="271"/>

                <TextBlock Text="Описание:" Width="59" RenderTransformOrigin="0.534,-0.034"/>
                <TextBox x:Name="TaskDescriptionTextBox" Height="22" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10" Width="272"/>

                <TextBlock Text="Срок выполнения (дата):" Width="139"/>
                <DatePicker x:Name="DueDatePicker" Margin="0,0,0,10" Width="276" Height="22"/>

                <TextBlock Text="ID Соц. работника:" Width="105"/>
                <TextBox x:Name="SocialWorkerIdTextBox" Height="22" Margin="0,0,0,10" Width="278"/>

                <TextBlock Text="ID Проекта:" Width="85"/>
                <TextBox x:Name="ProjectIdTextBox" Height="22" Margin="0,0,0,20" Width="278"/>

                <Button Content="Создать задачу" Width="150" Height="30" Click="CreateTaskButton_Click"/>
            </StackPanel>

            <Button Content="Назад" Width="100" Height="30"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,10,19"
                    Click="BtnBack_Click" RenderTransformOrigin="0.607,1.578"/>
        </Grid>
    </Grid>
</Page>
